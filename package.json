{
  "name": "@ahmedabdalla_85/schemakit",
  "version": "0.0.2",
  "description": "Dynamic entity management system with runtime schema creation, validation, and CRUD operations. Zero dependencies, works in Node.js and browsers.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "sql",
    "README.md",
    "REFACTORING.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:all": "npm run clean && npm run build && npm run build:esm && npm run build:umd",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run test && npm run build:all",
    "prepare": "npm run build"
  },
  "keywords": [
    "schema",
    "entity",
    "validation",
    "dynamic",
    "database",
    "orm",
    "crud",
    "typescript",
    "sqlite",
    "postgres",
    "zero-dependencies",
    "runtime-schema",
    "entity-management"
  ],
  "author": "Ahmed Abdalla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedabdalla_85/schemakit.git"
  },
  "homepage": "https://github.com/ahmedabdalla_85/schemakit#readme",
  "bugs": {
    "url": "https://github.com/ahmedabdalla_85/schemakit/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.19.119",
    "jest": "^29.5.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "eslint": "^8.38.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0"
  }
}