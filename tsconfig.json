{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "references": [
    { "path": "./packages/schemakit" },
    { "path": "./packages/schemakit-api" },
    { "path": "./packages/schemakit-elysia" },
    { "path": "./packages/schemakit-client" }
  ],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}